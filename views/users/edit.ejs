<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;"> Edit <%= user.username %>'s Profile </h1><br>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

				<label for="image">Profile Image:</label>
				<div class="form-group">
					<div class="thumbnail">
						<img src= "<%=user.picture %>" /><br>
						<div style="display: inline;">
							<input type="file" id="image" name="image" accept="image/*">
							<label for="deleteImage">Remove</label>
							<input type="checkbox" name="deleteImage[]" id="deleteImage">
						</div>
					</div>
				</div>
					
				<div class="form-group">
					<input class="form-control" type="text" name="user[username]"
						   value="<%= user.username %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="user[password]"
						   value="<%= user.password %>">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="user[firstname]"
						   value="<%= user.firstname %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="user[lastname]"
						   value="<%= user.lastname %>">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="user[email]"
						   value="<%= user.email %>">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="user[phone_number]"
						   value="<%= user.phone_number %>">
				</div>

				<!-- <div class="form-group">
					<label for="image">Profile Image:</label>
					<input type="file" id="image" name="image" accept="image/*"><br><br>
				</div> -->
			
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>