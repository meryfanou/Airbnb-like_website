<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create New Place</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/apartements" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Number of bedrooms"
						   name="place.bedrooms">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Number of beds"
						   name="place.beds">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Number of bathrooms"
						   name="place.bathrooms">
				</div>
				<div class="form-group">
					<input class="form-control" type="radio" value="Private Room" name="place.type">
					<label for="place.type">Private Room</label><br>
					<input class="form-control" type="radio" value="Shared Room" name="place.type">
					<label for="place.type">Shared Room</label><br>
					<input class="form-control" type="radio" value="Apartement" name="place.type">
					<label for="place.type">Apartement</label><br>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Is there a living room?"
						   name="place.linving_room">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="price" name="price" min="0.01"
						   step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>