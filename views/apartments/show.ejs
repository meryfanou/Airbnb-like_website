<%- include("../partials/header") %>

<h1>
	Show page working!
</h1>


<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= apartment.main_image.url %>">
				<div class="caption-full">
					<h4 class="pull-right"> $<%= apartment.price_min %>/night </h4>
