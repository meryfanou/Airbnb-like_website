<%- include("./partials/header") %>

<div class="container">
	<div class="row">
		<h2 style="position:relative; left:500px"> Sing Up </h2>
		<div style="width: 30%; margin: 25px auto; position:relative; left:50px">
			<form action="/register" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input type="text" name="username" placeholder="Username">
				</div>
				<div class="form-group">
					<input type="password" name="password" placeholder="Password">
				</div>
				<div class="form-group">
					<input type="password" name="confirm_password" placeholder="Confirm password">
				</div>
				<div class="form-group">
					<input type="text" name="user[firstname]" placeholder="First Name">
				</div>
				<div class="form-group">
					<input type="text" name="user[lastname]" placeholder="Last Name">
				</div>
				<div class="form-group">
					<input type="email" name="user[email]" placeholder="email">
				</div>
				<div class="form-group">
					<input type="tel" name="user[phone_number]" placeholder="Phone Number">
				</div>
				<div class="form-group">
					<input type="checkbox" name="user[app_role]" value="tenant">
					<label for="app_role">tenant</label><br>
					<input type="checkbox" name="user[app_role]" value="host">
					<label for="app_role">host</label><br>
				</div>
				<div>
					<label for="image">Profile Image:</label>
					<input type="file" id="image" name="image" accept="image/*"><br><br>
				</div>
				<button>Sing Up</button>
			</form>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>